<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/item_click_imageview"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_click_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"

        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_click_imageview"
        app:layout_constraintTop_toTopOf="@+id/item_click_imageview" />

    <Button
        android:id="@+id/item_click_button_reject"
        android:layout_width="133dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:background="#C11A1A"
        android:text="Rejeitar"
        android:clickable="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_click_button_connect"
        app:layout_constraintTop_toBottomOf="@+id/item_click_textview" />

    <Button
        android:id="@+id/item_click_button_connect"
        android:layout_width="133dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#4E45D1"
        android:text="Aceitar"
        android:clickable="false"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/item_click_imageview"
        app:layout_constraintTop_toBottomOf="@+id/item_click_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>